{
  "name": "alex-no/field-lingo",
  "description": "Field-lingo â€” lightweight library to map structured multi-language column names (e.g. @@name) to localized DB columns, with Yii2, Yii3, Laravel, and Symfony integration and framework-agnostic core.",
  "type": "library",
  "keywords": ["i18n", "yii2", "yii3", "laravel", "symfony", "multilingual", "database", "localized", "columns", "fields", "doctrine"],
  "license": "MIT",
  "authors": [
    {
      "name": "Oleksandr Nosov",
      "email": "alex@4n.com.ua"
    }
  ],
  "require": {
    "php": ">=8.2"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5 || ^10",
    "yiisoft/yii2": "^2.0",
    "yiisoft/active-record": "^3.0",
    "yiisoft/translator": "^3.0",
    "illuminate/database": "^9.0 || ^10.0 || ^11.0",
    "illuminate/support": "^9.0 || ^10.0 || ^11.0",
    "symfony/http-foundation": "^5.4 || ^6.0 || ^7.0",
    "symfony/dependency-injection": "^5.4 || ^6.0 || ^7.0",
    "doctrine/orm": "^2.10 || ^3.0"
  },
  "suggest": {
    "alex-no/language-detector": "Recommended for detecting user language automatically; requires its own configuration.",
    "yiisoft/yii2": "Required for using Yii2 adapter",
    "yiisoft/active-record": "Required for using Yii3 adapter",
    "yiisoft/translator": "Optional for Yii3 adapter - enables automatic locale detection from translator service",
    "illuminate/database": "Required for using Laravel adapter",
    "symfony/http-foundation": "Required for using Symfony adapter",
    "doctrine/orm": "Required for using Symfony/Doctrine adapter"
  },
  "autoload": {
    "psr-4": {
      "FieldLingo\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "FieldLingo\\Tests\\": "tests/",
      "App\\": "examples/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "test-coverage": "phpunit --coverage-html coverage"
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "extra": {
    "branch-alias": {
      "dev-main": "1.0-dev"
    }
  }
}
